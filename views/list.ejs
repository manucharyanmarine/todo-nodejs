<%- include("header") -%>
<div id="heading">
    <h1>Todolist</h1>
</div>
<div class="box">
    <form action="/" method="post" class="item">
        <input type="text" name="n" placeholder="new"><hr>
        <button id="b" type="submit"><span id="s2">+</span></button>
    </form>

    
<% for(var i=0;i<newListItem.length;i++) { %>
    <form action="/delete" method="post">
         <div class="item">
            <div class="round">
            <input type="checkbox" name="checkbox" value="<%= newListItem[i].id%>" onChange="this.form.submit()" id="checkbox">            
            <label for="checkbox"></label>
            </div>
            <p><%= newListItem[i].name %></p>
            <br>
        </div>         
    </form> 
    <% } %>
</div>